<%= render "shared/errors", object: @comment %>
<div class="container">
  <h3 align="center">Leave a comment</h3>
  <div class="row">
    <%= form_for(@comment, html: { class: "form-horizontal", role: "form" }, url: movie_review_comments_path) do |f| %>
    <%= f.text_field :user_id, type: "hidden", value: current_user.id %>
    <%= f.text_field :review_id, type: "hidden", value: params[:review_id] %>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label :description %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :description, class: "form-control", placeholder: "Add a comment", autofocus: true %>
      </div>
      <%= f.submit "Publish", class: "btn btn-primary" %>
    </div>
    <% end %>

  </div>
</div>
